  <!-- <link rel='stylesheet' href='/css/style.css' /> -->
  <link rel="stylesheet" href="stylesheets/zen_main_danka2.css" type="text/css" id="zen_main_danka">
  <link rel="stylesheet" href="stylesheets/zen_parts_danka.css" type="text/css" id="zen_parts_danka">
  <link rel="stylesheet" href="stylesheets/common_parts.css" type="text/css">

  <title>檀家管理システム　禅</title>

<script>
 <!-- 表中の偶数行の色を変える -->
 $(function(){
     $("form").submit(function(){
         // hiddenに世話人、地区名を設定する
         var sewaName = $("select[name='sewa_code'] option:selected").text();
         var tikuName = $("select[name='tiku_code'] option:selected").text();
         $("input[name='sewa_name']").val(sewaName);
         $("input[name='tiku_name']").val(tikuName);
     });
 });

</script>
</head>
<body>
<!-- container -->
<div id="container">
  <!-- header -->
  <div id="header">
    <div id="headerMain">
      <h1>長伝寺様向けカスタマイズ</h1>
    </div>
    <div id="headerLogo">
      <img src="img/logo1_dannkasystem.gif" alt="logo1_dannkasystem">
    </div>
  </div>
  <!-- header end -->
  <!-- inner -->
  <div id="inner">
    <!-- menu_box -->
    <div id="menu_box">
      <div id="temple_img"><img src="img/tyo-denji.jpg" alt="temple-image" width="198" height="132" border=0></div>
      <!-- menu -->
      <div id="menu">
        <nav>
          <ul>
            <li class="menu_disable"><span class="ja">スケジュール</span><span class="en">schedule</span>
          </ul>
          <ul>
            <li class="menu_enable"><a href="/danka_top"><span class="ja">檀家管理</span><span class="en">danke-manage</span></a>  
            <li class="menu_disable"><span class="ja">僧・世話人管理</span><span class="en">so-manage</span>
            <li class="menu_disable"><span class="ja">台帳管理</span><span class="en">master</span>
            <li class="menu_enable"><a href="/report_top"><span class="ja">帳票出力</span><span class="en">out-tyohyo</span></a>
          </ul>
          <ul>
            <li class="menu_disable"><span class="ja">備品管理</span><span class="en">stock-manage</span>
            <li class="menu_disable"><span class="ja">寺院情報</span><span class="en">user-info</span>
          </ul>
        </nav>
      </div>
      <!-- menu end -->
    </div>
    <!-- menu_box end -->
    <!-- wrapper -->
    <div id="wrapper">
      <!-- inner_title -->
      <div id="inner_title">
        <div id="title">
   	  <h2><span class="ja">檀家管理</span><span class="en">danka manage</span></h2>
        </div>
        <div id="menu_sub">
          <ul>
            <li><a href="/danka_syosai_new">検索(簡易)</a>
            <li><a href="/danka_50">検索(50音)</a> 
            <li><a href="/danka_syosai">検索(詳細)</a>
            <li><a href="/danka_tuika">戸主追加</a> 
          </ul>
        </div>
      </div>
      <!-- title end-->
      <!-- inner_main □□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□ -->
      <div id="inner_main">
        <div class="title_comment">
   	      ★検索したい項目に値を入力して、本ページ下の検索ボタンを押してください。
        </div>
        <form action="/danka_syosai_search" method="post">
          <div class="margin-top-default">
            <table class="table table-bordered table-condensed">
              <thead>
                <tr>
                  <th class="table-header-item-width-default">検索項目</td>
                  <th class="table-header-naiyo-width-default">検索内容</td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><label class="padding-default">戸主名</label></td>
                  <td class="table-selectable">
                      <div class="col col-sm-1 padding-default">姓</div>
                      <div class="col col-sm-5 padding-left-zero">
                        <input type="text" name="name_sei" class="form-control input-sm">
                      </div>
                      <div class="col col-sm-1 padding-default">名</div>
                      <div class="col col-sm-5 padding-left-zero">
                        <input type="text" name="name_na" class="form-control input-sm">
                      </div>
                  </td>
                </tr>
                <tr>
                  <td><label class="padding-default">ふりがな</label></td>
                  <td class="table-selectable">
                      <div class="col col-sm-1 padding-default">せい</div>
                      <div class="col col-sm-5 padding-left-zero">
                        <input type="text" name="furigana_sei" class="form-control input-sm">
                      </div>
                      <div class="col col-sm-1 padding-default">めい</div>
                      <div class="col col-sm-5 padding-left-zero">
                        <input type="text" name="furigana_na" class="form-control input-sm">
                      </div>
                  </td>
                </tr>
                <tr>
                 <td><label class="padding-default">所属寺</label></td>
                 <td class="table-selectable padding-default">
                    <div class="padding-default">
                      <input type="checkbox" name="jiin" value="1">長伝寺
                      <input type="checkbox" name="jiin" value="2">水月寺
                    </div>
                  </td>
                </tr>
                <tr>
                  <td><label class="padding-default">地区名</label></td>
                  <td class="table-selectable">
                    <div class="padding-left-default">
                        <select id="tiku_list"  name="tiku_code" class="form-control input-sm select-size-default" >
                        <% for(var i in tikuCodeInfo){
                         var _tikuCode = tikuCodeInfo[i].tiku_code;
                         var _tikuName = tikuCodeInfo[i].tiku_name; %>
                         <option value=<%= _tikuCode %>><%= _tikuName %></option>
                        <%}%>
                        </select>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td><label class="padding-default">世話人</label></td>
                  <td class="table-selectable">
                    <div class="padding-left-default">
                        <select id="sewa_list" name="sewa_code" class="form-control input-sm select-size-default" >
                        <% for(var i in sewaCodeInfo){
                         var _sewaCode = sewaCodeInfo[i].sewa_code;
                         var _sewaName = sewaCodeInfo[i].sewa_name; %>
                         <option value=<%= _sewaCode %>><%= _sewaName %></option>
                        <%}%>
                        </select>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td><label class="padding-default">タグ</label></td>
                  <td class="table-selectable">
                    <div class="padding-default">
                      <% 
                         var count = 1;
                         for(var i in tagsInfo){
                            count++;
                            var _tagName = tagsInfo[i].tags; 
                            %>
                            <input type="checkbox" name="tags" value="<%= _tagName %>"><%= _tagName %>
                            <%
                            if(count>5){
                                count=1;
                            %>      
                            <br>
                            <%}%>                      
                      <%}%>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td><label class="padding-default">生死</label></td>
                  <td class="table-selectable">
                    <div class="padding-default">
                        <input type="checkbox" name="include_kojin" value="1">故人含む
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="row">
                <div class="col col-sm-12">
                    <button type="submit" class="btn btn-success btn-lg">　検索　</button>
                </div>
            </div>
          </div>
         </form>
      </div>
      <!-- inner_main end □□□□□□□□□□□□□□□□□□□□□□□□□□□□□ -->
    </div>
    <!-- wrapper end -->
  </div>
  <!-- inner end -->
